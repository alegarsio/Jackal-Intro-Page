<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Documentation - <%= data.name %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Space Grotesk', sans-serif; }
        h1 { @apply text-4xl md:text-5xl font-bold tracking-tight mb-6; }
        h2 { @apply text-2xl font-bold mt-16 mb-6 tracking-tight border-b border-neutral-200 pb-4; }
        h3 { @apply text-xl font-bold mt-10 mb-4 tracking-tight; }
        p, li { @apply mb-4 leading-relaxed text-neutral-700; }
        ul, ol { @apply ml-6 mb-6; }
        ul { @apply list-disc; }
        pre { @apply bg-[#1a1a1a] text-[#e0e0e0] p-5 rounded-lg border border-neutral-800 overflow-x-auto text-[13.5px] font-mono mb-6 leading-7 shadow-sm; }
        p code, li code { @apply font-mono text-[13px] bg-neutral-100 px-1.5 py-0.5 rounded-md text-neutral-800 border border-neutral-200; }
        pre code { @apply bg-transparent p-0 text-inherit border-none; }
        .k { color: #c678dd; font-weight: bold; } 
        .s { color: #98c379; } 
        .f { color: #61afef; } 
        .c { color: #7f848e; font-style: italic; } 
        .n { color: #d19a66; } 
        .t { color: #e5c07b; } 
        .v { color: #e06c75; }
    </style>
</head>
<body class="bg-white text-neutral-900 antialiased">

    <nav class="flex items-center justify-between px-6 md:px-8 lg:px-12 h-20 border-b border-neutral-200 fixed top-0 w-full bg-white/90 backdrop-blur-md z-50">
        <div class="flex items-center gap-4">
            <button id="menu-toggle" class="md:hidden text-neutral-500 hover:text-black focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 9h16.5m-16.5 6.75h16.5" />
                </svg>
            </button>
            <a href="/" class="flex items-center gap-3 group">
                <img src="/images/stack.png" alt="<%= data.name %> Logo" class="w-8 h-8 object-contain group-hover:scale-110 transition-transform duration-300">
                <span class="text-xl font-bold tracking-tight"><%= data.name %> Docs<span class="text-neutral-400">.</span></span>
            </a>
        </div>
        <div class="flex items-center gap-8 text-sm font-medium">
            <a href="/contribute" class="text-neutral-600 hover:text-black transition-colors hidden sm:block">Contribute</a>
            <a href="/" class="bg-black text-white px-5 py-2 hover:bg-neutral-800 transition-colors rounded-sm">← Back to Home</a>
        </div>
    </nav>

    <div class="flex pt-20 min-h-screen relative">
        <div id="sidebar-backdrop" class="fixed inset-0 bg-black/20 z-40 hidden md:hidden backdrop-blur-sm transition-opacity opacity-0"></div>

        <aside id="sidebar" class="fixed inset-y-0 left-0 z-50 w-64 h-full bg-white border-r border-neutral-200 overflow-y-auto p-6 lg:p-8 transform -translate-x-full transition-transform duration-300 ease-in-out md:translate-x-0 md:top-20 md:h-[calc(100vh-5rem)] md:z-0 md:bg-neutral-50/50">
            
            <div class="md:hidden flex justify-end mb-6">
                <button id="menu-close" class="text-neutral-400 hover:text-black">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
                </button>
            </div>

            <nav class="space-y-4 sticky top-6">
                
                <div>
                    <button class="menu-toggle-btn w-full flex justify-between items-center text-xs uppercase tracking-wider text-neutral-500 font-bold mb-3 hover:text-black transition-colors" data-target="menu-getting-started">
                        <span>Getting Started</span>
                        <svg class="w-4 h-4 transition-transform duration-200 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <ul id="menu-getting-started" class="space-y-1 ml-0 list-none pl-3 border-l border-neutral-300">
                        <li><a href="#installation" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Installation</a></li>
                        <li><a href="#hello-world" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Hello World</a></li>
                    </ul>
                </div>

                <div>
                    <button class="menu-toggle-btn w-full flex justify-between items-center text-xs uppercase tracking-wider text-neutral-500 font-bold mb-3 hover:text-black transition-colors" data-target="menu-core-concepts">
                        <span>Core Concepts</span>
                        <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <ul id="menu-core-concepts" class="hidden space-y-1 ml-0 list-none pl-3 border-l border-neutral-300">
                        <li><a href="#functions" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Functions</a></li>
                        <li><a href="#lambda" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Lambda & IIFE</a></li>
                        <li><a href="#enums" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Enums</a></li>
                        <li><a href="#exception-handling" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Exception Handling</a></li>
                        <li><a href="#user-input" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">User Input</a></li>
                        <li><a href="#pattern-matching" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Pattern Matching</a></li>
                    </ul>
                </div>

                <div>
                    <button class="menu-toggle-btn w-full flex justify-between items-center text-xs uppercase tracking-wider text-neutral-500 font-bold mb-3 hover:text-black transition-colors" data-target="menu-oop">
                        <span>Object-Oriented</span>
                        <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <ul id="menu-oop" class="hidden space-y-1 ml-0 list-none pl-3 border-l border-neutral-300">
                        <li><a href="#classes" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Classes & Objects</a></li>
                        <li><a href="#inheritance" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Inheritance</a></li>
                        <li><a href="#interfaces" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Interfaces</a></li>
                    </ul>
                </div>

                <div>
                    <button class="menu-toggle-btn w-full flex justify-between items-center text-xs uppercase tracking-wider text-neutral-500 font-bold mb-3 hover:text-black transition-colors" data-target="menu-data-structures">
                        <span>Data Structures</span>
                        <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <ul id="menu-data-structures" class="hidden space-y-1 ml-0 list-none pl-3 border-l border-neutral-300">
                        <li><a href="#arrays" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">Arrays</a></li>
                        <li><a href="#hashmaps" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">HashMaps</a></li>
                    </ul>
                </div>

                 <div>
                    <button class="menu-toggle-btn w-full flex justify-between items-center text-xs uppercase tracking-wider text-neutral-500 font-bold mb-3 hover:text-black transition-colors" data-target="menu-stdlib">
                        <span>Standard Library</span>
                        <svg class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </button>
                    <ul id="menu-stdlib" class="hidden space-y-1 ml-0 list-none pl-3 border-l border-neutral-300">
                        <li><a href="#stdlib-file" class="nav-link block text-sm py-1.5 px-3 -ml-3 rounded-md hover:bg-neutral-100 transition-all text-neutral-600">File I/O</a></li>
                    </ul>
                </div>
            </nav>
        </aside>

        <main class="flex-1 md:ml-64 p-6 md:p-12 lg:p-16 max-w-3xl mx-auto md:mx-0">
            
            <%- include('docs/installation') %>
            <%- include('docs/hello-world') %>
            <%- include('docs/functions') %>
            <%- include('docs/lambda') %>
            <%- include('docs/enums') %>
            <%- include('docs/exception-handling') %>
            <%- include('docs/user-input') %>
            <%- include('docs/pattern-matching') %>
            <%- include('docs/classes') %>
            <%- include('docs/inheritance') %>
            <%- include('docs/interfaces') %>
            <%- include('docs/arrays') %>
            <%- include('docs/hashmaps') %>
            <%- include('docs/stdlib-file') %>
           
            <div class="pt-8 mt-16 border-t border-neutral-100 text-neutral-500 text-sm flex justify-between items-center">
                <p class="mb-0">© <%= new Date().getFullYear() %> Jackal Language.</p>
                <a href="<%= data.repoLink %>/issues" target="_blank" class="hover:text-black transition-colors flex items-center gap-1">Report an issue ↗</a>
            </div>

        </main>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
           
            // --- 1. LOGIKA SIDEBAR RESPONSIVE (Mobile) ---
            const menuToggle = document.getElementById('menu-toggle');
            const menuClose = document.getElementById('menu-close');
            const sidebar = document.getElementById('sidebar');
            const backdrop = document.getElementById('sidebar-backdrop');
            const navLinksItems = document.querySelectorAll('.nav-link');

            function openSidebar() {
                sidebar.classList.remove('-translate-x-full');
                backdrop.classList.remove('hidden');
                setTimeout(() => backdrop.classList.remove('opacity-0'), 10); 
            }

            function closeSidebar() {
                sidebar.classList.add('-translate-x-full');
                backdrop.classList.add('opacity-0');
                setTimeout(() => backdrop.classList.add('hidden'), 300); 
            }

            menuToggle.addEventListener('click', openSidebar);
            menuClose.addEventListener('click', closeSidebar);
            backdrop.addEventListener('click', closeSidebar);

            navLinksItems.forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 768) { 
                        closeSidebar();
                    }
                });
            });

            // --- 2. LOGIKA SIDEBAR MENU ACCORDION (Baru) ---
            const menuToggleButtons = document.querySelectorAll('.menu-toggle-btn');
            
            menuToggleButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const targetId = button.getAttribute('data-target');
                    const targetMenu = document.getElementById(targetId);
                    const targetIcon = button.querySelector('svg');
                    
                    if (targetMenu) {
                        targetMenu.classList.toggle('hidden');
                    }
                    if (targetIcon) {
                        targetIcon.classList.toggle('rotate-180');
                    }
                });
            });

            // --- 3. LOGIKA AUTO-HIGHLIGHT (Scroll Spy) ---
            const sections = document.querySelectorAll("main section[id]");
            
            const observerOptions = {
                root: null,
                rootMargin: "-20% 0px -70% 0px",
                threshold: 0
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        navLinksItems.forEach((link) => {
                            link.classList.remove('bg-black', 'text-white', 'font-medium');
                            link.classList.add('text-neutral-600', 'hover:bg-neutral-100');
                        });

                        const activeLink = document.querySelector(`aside nav ul li a[href="#${entry.target.id}"]`);
                        if (activeLink) {
                            activeLink.classList.add('bg-black', 'text-white', 'font-medium');
                            activeLink.classList.remove('text-neutral-600', 'hover:bg-neutral-100');
                        }
                    }
                });
            }, observerOptions);

            sections.forEach((section) => {
                observer.observe(section);
            });
        });
    </script>

</body>
</html>